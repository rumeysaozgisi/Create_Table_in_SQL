--CREATE 
CREATE DATABASE OKULUM

CREATE TABLE OGRENCI(
OGRNO INT NOT NULL PRIMARY KEY, 
-- THE STUDENT NUMBER CANNOT BE LEFT BLANK

OGRADI VARCHAR(15),
OGRSOYADI VARCHAR(20),
GRADE VARCHAR(50),
OGRSINIF VARCHAR(2),
GRIL VARCHAR(20) DEFAULT 'SEYHAN', 
OGRSINAV1 TINYINT CHECK (OGRSINAV1>0),
OGRSINAV2 INT,
CONSTRAINT CHECK2 CHECK (OGRSINAV2>=0 AND OGRSINAV2<=100),
OGRKOL VARCHAR(20),


CONSTRAINT CHKKOL CHECK (OGRKOL IN('SAGLIK','KUTUPHANE','CEVRE','TRAFIK')))
